---
import CTAImage from "@/assets/images/Visionex_files/CTA.svg";
import Image from "astro/components/Image.astro";
import {Button} from "@/components/ui/button";
---

<section class="py-10">
  <div
    class="bg-[#fedd00] rounded-lg p-10 flex flex-col lg:flex-row items-center justify-between gap-10"
  >
    <!-- Left Text Content -->
    <div class="text-center lg:text-left">
      <h2 class="text-2xl md:text-4xl w-full font-bold">
        Ready to meet your personal AI writing assistant?
      </h2>
      <p class="mt-4 text-gray-800">
        Take action now to make a difference! Whether it&apos;s supporting a cause you&apos;re passionate about.
      </p>
      <Button className="mt-6">Start Writing For Free</Button>
    </div>

    <!-- Right Illustration -->
    <div class="flex justify-center w-full md:w-5/12 ">
        <Image src={CTAImage} title={"CTA"} alt="Illustration of AI writing assistant" class="w-full max-w-sm lg:max-w-md" />
    </div>
  </div>
</section>
