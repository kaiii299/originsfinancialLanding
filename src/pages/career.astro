---
import ImageCarousel from "@/components/imageCarousel";
import RichTextComponent from "@/components/RichTextComponent";
import { Button } from "@/components/ui/button";
import TitleComponent from "@/components/ui/title.astro";
import Layout from "@/layouts/Layout.astro";
import { client } from "@/lib/contentful";
import type { ICareer } from "@/lib/interface";

const careerData = await client.withoutUnresolvableLinks.getEntry<ICareer>(
  "1d9TUEQGK5lJ4QajdGSfHQ"
);

const { title, description, buttonText, images } = careerData.fields;

const canonicalUrll = new URL(Astro.url);
---

<Layout canonicalUrl={`${canonicalUrll}`} description="Career at Origins Financail" title="Career with us">
  <section class="first-section">
    <div class="mb-32 space-y-10">
      <div class="space-y-10">
        <TitleComponent title={title} />
        <RichTextComponent RichTextData={description} />
        <a href="/contact">
          <Button className="bg-main">{buttonText}</Button>
        </a>
      </div>
      <div>
        <TitleComponent title={"Our Adventures"} />
        <ImageCarousel images={images} client:only="React" noDisplace />
      </div>
    </div>
  </section>
</Layout>
