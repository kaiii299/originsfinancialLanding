---
import Footer from "@/components/sections/footer.astro";
import Navbar from "@/components/sections/navbar.astro";
import { Toaster } from "@/components/ui/toaster";
import { client } from "@/lib/contentful";
import type { IMisc } from "@/lib/interface";
import "@/styles/global.css";
import { ClientRouter } from "astro:transitions";

// Define props
export interface Props {
  title: string;
  description: string;
  canonicalUrl?: string;
}

const miscData = await client.withoutUnresolvableLinks.getEntry<IMisc>(
  "4EGtKjQZn22kzgtVW3hlpl"
);

// Destructure props
const { title, description, canonicalUrl } = Astro.props;

// Define default values (optional)
const canonicalUrll = new URL(Astro.url);

const defaultTitle = "Title";
const defaultDescription = "This is a default description.";
const defaultCanonicalUrl = "This is a canonical URL";

// Use provided props or fallback to defaults
const pageTitle = title || defaultTitle;
const pageDescription = description || defaultDescription;
const pageCanonicalUrl = canonicalUrl || defaultCanonicalUrl;

// OG image URL
const imageUrl = `/assets/images/logo.svg`;

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.ico" /> -->
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{pageTitle}</title>
    <meta name="title" content={miscData.fields.title || pageTitle} />
    <meta name="description" content={miscData.fields.description || pageDescription} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrll} />
    <meta property="og:title" content={miscData.fields.title || pageTitle}/>
    <meta property="og:description" content={miscData.fields.description || pageDescription}  />
    <meta property="og:image" content={imageUrl} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalUrll} />
    <meta property="twitter:title" content={miscData.fields.title || pageTitle} />
    <meta property="twitter:description" content={miscData.fields.description || pageDescription}  />
    <meta property="twitter:image" content={imageUrl} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrll} />

    <!-- Additional SEO Tags -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="CodeNest.sg" />

    <ClientRouter/>
  </head>

  <body>
    <Navbar />
    <slot />
    <Toaster client:only="React" />
    <Footer title={title} description={miscData.fields.longDescription} />
  </body>
</html>
